<%= form_for(@cla) do |f| %>
  <% if @cla.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cla.errors.count, "error") %> prohibited this cla from being saved:</h2>

      <ul>
      <% @cla.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :professor_id %><br>
    <%=  f.select :professor_id, Professor.all.collect {|x| [x.name, x.id]} %>
    <!-- # f.number_field  :professor_id-->
  </div>
  <div class="field">
    <%= f.label :course_id %><br>
    <%=  f.select :course_id, Course.all.collect {|x| [x.name, x.id]} %>
   <!-- <%= f.number_field  :course_id %> -->
  </div>
  <div class="field">
    <%= f.label :group_id %><br>
    <%= f.select :group_ids, Group.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
              
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :lab %><br>
    <%= f.check_box :lab %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить", class: 'btn btn-mini btn-primary' %>
  </div>
<% end %>
