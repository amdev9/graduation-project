<h1>Listing clas</h1>

<table>
  <thead>
    <tr>
      <th>Professor</th>
      <th>Course</th>
      <th>  Group</th>
      <th>Duration</th>
      <th>Lab</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clas.each do |cla| %>
      <tr>
        <td><%= cla.professor_id %></td>
        <td><%= cla.course_id %></td>
        <td> <dd><%= cla.groups.map(&:name).join(', ')  %></dd></td>
        <td><%= cla.duration %></td>
        <td><%= cla.lab %></td>
        <td><%= link_to 'Show', cla %></td>
        <td><%= link_to 'Edit', edit_cla_path(cla) %></td>
        <td><%= link_to 'Destroy', cla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

