<h1>Дисциплины</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>№</th>
      <th>Название дисциплины</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
         <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= link_to 'Показать', course,  class: "btn btn-mini btn-default" %></td>
        <td><%= link_to 'Редактировать', edit_course_path(course),  class: "btn btn-mini btn-success"%></td>
        <td><%= link_to 'Удалить', course, method: :delete, data: { confirm: 'Вы уверены?' },  class: "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить дисциплину', new_course_path,  class: "btn btn-mini btn-primary" %>
