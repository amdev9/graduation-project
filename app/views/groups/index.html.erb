 
  
<h1>Группы</h1>

<table class = "table table-hover table-striped">
 
  <thead>
    <tr>
      <th>№</th>
      <th>Номер группы</th>
      <th>Количество студентов в группе</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
       <td><%= group.id %></td>
        <td><%= group.name %></td>
        <td><%= group.size %></td>
        <td><%= link_to 'Показать', group,  class: "btn btn-mini btn-default" %></td>
        <td><%= link_to 'Редактировать', edit_group_path(group),  class: "btn btn-mini btn-success" %></td>
        <td><%= link_to 'Удалить', group, method: :delete, data: { confirm: 'Вы уверены?' } ,  class: "btn btn-mini btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить группу', new_group_path,  class: "btn btn-mini btn-primary" %>
