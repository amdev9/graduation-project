 
<h1>Аудитории</h1>

<%= search_form_for @r  do |f| %>

<div class="form-inline">

  <div class="form-group">
    
    <%= f.search_field :name_cont, class: "form-control", placeholder: "Номер аудитории"  %>
  </div>


  <div class="form-group"> 
    
    <%= f.search_field :size_eq, class: "form-control",  placeholder: "Количество мест" %>
  </div>
   
   <div class="form-group">
      Лабораторная
    <%= f.check_box :lab_true, class: "form-control" %>
  </div>

 
  <%= f.submit 'Поиск', class: 'btn btn-mini btn-success' %> 
  <%= link_to 'Сброс', url_for({}), class: 'btn btn-mini btn-default' %>

<% end %>
</div>


<br/>
<br/>


<table class = "table table-hover table-striped">
  <thead>
    <tr>
      <th>Номер аудитории</th>
      <th>Лабораторная?</th>
      <th>Количество мест</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
    <% @rooms.each do |room| %>
      <tr>

        <td><%= room.name %></td>
        <td><% if room.lab %>Да<% else %>Нет<% end %></td>
        <td><%= room.size %></td>

        <td><%= link_to 'Просмотр', room, class: 'btn btn-mini btn-default'%></td>
        <td><%= link_to 'Редактировать', edit_room_path(room), class: 'btn btn-mini btn-success'%></td>
        <td><%= link_to 'Удалить', room, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
    


  </tbody>
</table>

  <!--<%= render 'form' %>-->
     <%= link_to 'Добавить аудиторию', new_room_path,class: 'btn btn-mini btn-primary'  %>

<br>
<%= paginate @rooms    %>
